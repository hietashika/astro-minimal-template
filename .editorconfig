# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown,mdc}]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{astro,html,css,scss}]
indent_style = space
indent_size = 2

[*.{json,jsonc,yaml,yml}]
indent_style = space
indent_size = 2
