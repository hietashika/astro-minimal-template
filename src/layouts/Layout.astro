<style>
  .body {
    background-color: var(--surface-contrast);
  }

  .content {
    background-color: var(--surface-light);
    border-radius: var(--border-radius-small);
    padding-block: var(--spacing-24);
    padding-inline: var(--spacing-08);
  }

  .footer {
